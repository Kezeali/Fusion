<?xml version="1.0" encoding="iso-8859-1"?>
<Theme>
	<image name="images/particles/star" file="star.png" />
	<image name="images/particles/generic" file="light16p.png" />
	<image name="images/general/hole" file="circle.png" />
	<sound name="sounds/spawn" file="PowerUp.wav" />
  <image name="gui/general/healthbar" file="healthbar.png" />

  <!--These 'viewport' trees are all part of the splitscreen group, thus
  only one of these trees can be loaded at a time (this simplifies the
  scripts which will (eventually) be used to load them)-->
	<tree name="gui/viewport1p" group="splitscreen">
		<image name="/stencil1" file="viewport1p.png" />
    
    <viewport name="/1">
      <stencil x="0" y="0" w="100%" h="100%">gui/viewport1p/stencil1</stencil>
      <healthindicator x="10%" y="92%" w="50%" h="">gui/general/healthbar</healthindicator>
    </viewport>
	</tree>
  
	<tree name="gui/viewport2p" group="splitscreen">
    <!--Both players have the same shaped VP-->
		<image name="/stencil" file="viewport2p.png" />
    <!--Shared VP for 'Dynamic SplitScreen' mode-->
    <image name="/stencil_shared" file="viewport1p.png" />

    <!--At the moment these 'name' properties are hard-coded, but
    when camera scripts are implemented, they will be defined there-->
    <!--When a them file is fully loaded, we check which viewport names
    were defined and thus decide which types of views this theme supports.
    e.g. which viewports can be joined (indicated by the 'XvY' notation)
    and how many players are supported (indicated by tree names).
    As mentioned above, the way this is decided and the names used
    may change from camera script to camera script, when camera scripting
    is implemented-->
    <viewport name="/1">
      <stencil>gui/viewport2p/stencil</stencil>
      <healthindicator>gui/general/healthbar</healthindicator>
      <x>0</x>
      <y>0</y>
      <w>50%</w>
      <h>100%</h>
    </viewport>
    <viewport name="/2">
      <stencil>gui/viewport2p/stencil</stencil>
      <healthindicator>gui/general/healthbar</healthindicator>
      <x>50%</x>
      <y>0</y>
      <w>50%</w>
      <h>100%</h>
    </viewport>
    <viewport name="/1v2">
      <stencil>gui/viewport2p/stencil_shared</stencil>
      <healthindicator>gui/general/healthbar</healthindicator>
      <x>0</x>
      <y>0</y>
      <w>100%</w>
      <h>100%</h>
    </viewport>
	</tree>
  
	<tree name="gui/viewport3p" group="splitscreen">
		<image name="/stencil1" file="viewport3p_1.png" />
		<image name="/stencil2" file="viewport3p_2.png" />
		<image name="/stencil3" file="viewport3p_3.png" />
    <image name="/stencil1v2" file="viewport3p_1v2.png" />
    <image name="/stencil1v3" file="viewport3p_1v3.png" />
    <image name="/stencil2v3" file="viewport3p_2v3.png" />

    <viewport name="/1">
      <stencil>gui/viewport3p/stencil1</stencil>
      <healthindicator>gui/general/healthbar</healthindicator>
      <x>0</x>
      <y>0</y>
      <w>50%</w>
      <h>100%</h>
    </viewport>
    <viewport name="/2">
      <stencil>gui/viewport3p/stencil2</stencil>
      <healthindicator>gui/general/healthbar</healthindicator>
      <x>50%</x>
      <y>0</y>
      <w>50%</w>
      <h>100%</h>
    </viewport>
    <viewport name="/3">
      <stencil>gui/viewport3p/stencil3</stencil>
      <healthindicator>gui/general/healthbar</healthindicator>
      <x>0</x>
      <y>50%</y>
      <w>100%</w>
      <h>50%</h>
    </viewport>

    <viewport name="/1v2">
      <stencil>gui/viewport3p/stencil1v2</stencil>
      <healthindicator>gui/general/healthbar</healthindicator>
      <x>0</x>
      <y>0</y>
      <w>100%</w>
      <h>100%</h>
    </viewport>
    <viewport name="/1v3">
      <stencil>gui/viewport3p/stencil1v3</stencil>
      <healthindicator>gui/general/healthbar</healthindicator>
      <x>0</x>
      <y>0</y>
      <w>100%</w>
      <h>100%</h>
    </viewport>
    <viewport name="/2v3">
      <stencil>gui/viewport3p/stencil2v3</stencil>
      <healthindicator>gui/general/healthbar</healthindicator>
      <x>0</x>
      <y>0</y>
      <w>100%</w>
      <h>100%</h>
    </viewport>
	</tree>
  
	<tree name="gui/viewport4p" group="splitscreen">
		<viewport name="/1" file="viewport4p.png" x="0" y="0" w="50%" h="50%" />
		<viewport name="/2" file="viewport4p_2.png" x="50%" y="0" w="50%" h="50%" />
		<viewport name="/3" file="viewport4p_3.png" x="0" y="50%" w="50%" h="50%" />
		<viewport name="/4" file="viewport4p_4.png" x="50%" y="50%" w="50%" h="50%" />
	</tree>
</Theme>
