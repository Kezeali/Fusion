<?xml version="1.0" encoding="UTF-8"?>
<inputdefinitions name="fusion">
	<group name="system" uiname="System">
		<input name="quit" uiname="Quit" description="Quits the game" binary="true" toggle="false"/>
		<input name="debug" uiname="Debug" description="Shows debug info" binary="true" toggle="false"/>
		<input name="quicksave" uiname="Quck-Save" description="Saves into the next quicksave slot" binary="true" toggle="false"/>
		<input name="quickload" uiname="Quck-Load" description="Loads the most recent quicksave" binary="true" toggle="false"/>
	</group>
	<group name="move" uiname="Movement">
		<!--should these be called 'command' rather than 'input'?
		They are called 'command' in controls.xml-->
		<input name="thrust" uiname="Forward" description="Moves your character forward" binary="true" toggle="false"/>
		<input name="rotate_left" uiname="Turn Left" description="Rotates your character left" binary="true" toggle="false"/>
		<input name="rotate_right" uiname="Turn Right" description="Rotates your character right" binary="true" toggle="false"/>
		<input name="up" uiname="Up" description="Moves your character up" binary="true" toggle="false"/>
		<input name="down" uiname="Down" description="Moves your character down" binary="true" toggle="false"/>
		<input name="left" uiname="Left" description="Moves your character left" binary="true" toggle="false"/>
		<input name="right" uiname="Right" description="Moves your character right" binary="true" toggle="false"/>
	</group>
	<group name="combat" uiname="Combat">
		<input name="primary" uiname="Primary Fire" description="Fires your primary weapon" binary="true" toggle="false"/>
		<input name="secondary" uiname="Secondary Fire" description="Fires your secondary weapon" binary="true" toggle="false"/>
		<input name="special" uiname="Special Fire" description="Fires your special weapon" binary="true" toggle="false"/>
	</group>
</inputdefinitions>
