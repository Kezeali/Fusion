body
{
	font-family: Delicious;
	font-weight: normal;
	font-style: normal;
	font-size: 15;
	color: white;
}

body.window
{
	padding-top: 26px;
	padding-bottom: 20px;
	
	min-width: 250px;
	max-width: 1000px;
	
	min-height: 135px;
	max-height: 700px;
}


div#title_bar
{
	z-index: 1;

	position: absolute;
	top: 0px;
	left: 0px;
	
	text-align: left;
}

div#title_bar div#icon
{
	position: absolute;
	left: 2px;
	top: 2px;
	
	width: 24px;
	height: 24px;
}

div#title
{
	font-size: 20;
	font-weight: bold;

	width: auto;
	height: 22px;

	outline-font-effect: outline;
	outline-width: 1px;
	outline-color: black;

	padding: 4px 10px 0px 10px;

	background-decorator: tiled-horizontal;
	background-left-image: fusion.png 151px 0px 160px 22px;
	background-center-image: fusion.png stretch 160px 0px 170px 22px;
	background-right-image: fusion.png 170px 0px 177px 22px;
}


div.close_button
{
	display: none;

	position: absolute;
	top: 4px;
	right: 8px;

	width: 32px;
	height: 20px;
	icon-decorator: image;
	icon-image: fusion.png 204px 5px 236px 25px;
}

div.close_button:hover
{
	icon-image-t: 26px 46px;
}

div.close_button:active
{
	icon-image-t: 47px 67px;
}


div#window
{
	width: auto;
	padding: 10px 15px;

	background-decorator: tiled-box;
	background-top-left-image: fusion.png 0px 31px 133px 140px;
	background-top-right-image: fusion.png 136px 31px 146px 140px;
	background-top-image: fusion.png stretch 134px 31px 135px 140px;
	background-bottom-left-image: fusion.png 0px 140px 11px 151px;
	background-bottom-right-image: fusion.png 136px 140px 146px 151px;
	background-bottom-image: fusion.png stretch 11px 140px 12px 151px;
	background-left-image: fusion.png stretch 0px 139px 10px 140px;
	background-center-image: fusion.png stretch 11px 139px 12px 140px;
	background-right-image: fusion.png 136px 141px 146px 142px;
}

div#content
{
	z-index: 2;

	width: auto;
	height: 100%;

	overflow: hidden auto;

	text-align: center;

	shadow-font-effect: shadow;
	shadow-offset: 1px 1px;
	shadow-color: grey;
}

div#size_target
{
	width: 12px;
	height: 12px;
	icon-decorator: image;
	icon-image: fusion.png 56px 198px 68px 210px;
}



p
{
	text-align: left;
	margin-bottom: 1em;
}

h1
{
	margin-left: 0.4em;
	margin-bottom: 0.4em;

	text-align: left;
	font-size: 16;
	font-weight: bold;

	shadow-font-effect: shadow;
	shadow-offset: 1px 1px;
	shadow-color: black;
}

h2
{
	margin-top: 0.3em;
	margin-bottom: 0.1em;

	text-align: left;
	font-weight: bold;

	shadow-font-effect: shadow;
	shadow-offset: 1px 1px;
	shadow-color: black;
}



input,
select,
dataselect
{
	margin-left: 20px;
}

input.submit
{
	margin-left: 0px;
}



button,
input.submit
{
	display: inline-block;

	width: 159px;
	height: 37px;

	padding-top: 8px;
	vertical-align: -10px;

	font-size: 18;
	text-align: center;
	tab-index: auto;

	background-decorator: image;
	background-image: fusion.png 247px 0px 406px 45px;
	background-z-index: 0;
}

button:focus,
input.submit:focus
{
    font-weight: bold;
    
    shadow-font-effect: shadow;
    shadow-offset: 1px 1px;
    shadow-color: white;
}

button:hover,
input.submit:hover
{
	background-image-t: 45px 90px;
}

button:active,
input.submit:active
{
	background-image-t: 90px 135px;
}



input.text
{
	height: 28px;
	padding: 4px 8px 0px;

	background-decorator: tiled-horizontal;
	background-left-image: fusion.png 164px 199px 176px 223px;
	background-center-image: fusion.png stretch 176px 199px 186px 223px;
	background-right-image: fusion.png 302px 199px 307px 223px;
}

