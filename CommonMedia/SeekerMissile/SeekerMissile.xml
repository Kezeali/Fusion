<?xml version="1.0" encoding="iso-8859-1"?>
<FusionWeapon tag="SeekerMissile">
	<name>Seeker missile</name>
	<description>Seeks the nearerst ship. Trys to avoid terrain.</description>
	
	<fireeffect>
		<duration>4</duration>
		<colour>
			<r>240</r>
			<g>200</r>
			<b>200</b>
		</colour>
		<image>flash.png</image>
	</fireeffect>
	
	<scripting script="SeekerMissile.as">
		<onfire>void onFire()</onfire>
	</scripting>
  
	<projectile name="seeker">
		<image>missile.png</image>
		<sounds>
			<creation>fire.wav</creation>
			<detonation>bang.wav</detonation>
		<contrail>
			<duration>10</duration>
			<colour>
				<r>100</r>
				<g>100</r>
				<b>160</b>
			</colour>
			<image>smoke.png</image>
		</contrail>
		<payload>
			<damage>0</damage>
			<blastradius>0</blastradius>
			<damageterrain>false</damageterrain>
		</payload>
		<physics>
			<mass>10</mass>
			<engineforce>10</engineforce>
			<facemotion>true</facemotion>
		</physics>
		
		<scripting script="SeekerMissile.as">
			<creation>void seekerCreation()</creation>
			<step>void seekerStep()</step>
			<onanycollision>void seekerOnCollision(int, int)</onanycollision>
		</scripting>
	</projectile>

	<projectile name="cluster">
		<image>bit.png</image>
		<detonation>
			<image>flash.png</image>
			<duration>4</duration>
		</detonation>
		<payload>
			<damage>10</damage>
			<blastradius>10</blastradius>
			<damageterrain>true</damageterrain>
		</payload>
		<physics>
			<mass>2</mass>
			<engineforce>10</engineforce>
			<facemotion>false</facemotion>
		</physics>
		<scripting script="SeekerMissile.as">
			<step>void clusterStep()</step>
			<onanycollision>void clusterOnCollision(int, int)</onanycollision>
		</scripting>
	</projectile>
</FusionWeapon>