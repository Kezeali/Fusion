<?xml version="1.0" encoding="iso-8859-1"?>
<Fusion>
	<!--Is something like this necessary?-->
	<entities>
		<ShockWave type="SHIP">/Fusion/ships/ShockWave</ShockWave>
	</entities>
	<ships>
		<ShockWave>
			<name>Shock Wave</name>
			<description>Test ship.</description>

			<health>100</health>

			<body>
				<image>ShockWave/Body.png</image>
			</body>
			<leftEngine>
				<x>3</x>
				<y>24</y>
				<!-- If a resource type is specified (as below), the resource will be loaded
			using the relavant method. Otherwise, the text node will just be stored
			as a string resource (in this case 'ShockWave/SWEngine.png' would be stored) -->
				<image type="IMAGE">ShockWave/SWEngine.png</image>

				<payload>
					<damage>100</damage>
					<blastradius>100</blastradius>
					<damageterrain>true</damageterrain>
				</payload>

				<!-- No module is specified (with the prop. module=...), so 
			this script will be given its own module (assuming this
			first time it has been reffered to; otherwise it will be added
			to a module with all the other references to the script called 
			'ShockWave/ShockWave.as') -->
				<scripting script="ShockWave/ShockWave.as">
					<!-- These elements are loaded as ScriptReference objects by the ResourceManager-->
					<onjettison>void jettison()</onjettison>
					<step>void jettisonedStep()</step>
					<onanycollision>void onCollision(int, int)</onanycollision>
				</scripting>
			</leftEngine>
			<rightEngine>
				<x>28</x>
				<y>24</y>
				<image type="IMAGE">ShockWave/SWEngine.png</image>

				<payload>
					<damage>100</damage>
					<blastradius>100</blastradius>
					<damageterrain>true</damageterrain>
				</payload>

				<scripting script="ShockWave/ShockWave.as">
					<onjettison>void jettison()</onjettison>
					<step>void jettisonedStep()</step>
					<onanycollision>void onCollision(int, int)</onanycollision>
				</scripting>
			</rightEngine>
			<primaryWeapon>
				<x>7</x>
				<y>7</y>
				<image type="IMAGE">ShockWave/SWPrimary.png</image>
			</primaryWeapon>
			<secondaryWeapon>
				<x>24</x>
				<y>7</y>
				<image type="IMAGE">ShockWave/SWSecondary.png</image>
			</secondaryWeapon>

			<physics>
				<mass>15</mass>
				<engineforce>0.20</engineforce>
				<rotationvelocity>10</rotationvelocity>
			</physics>
		</ShockWave>
	</ships>
</Fusion>
